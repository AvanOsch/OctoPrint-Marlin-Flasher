<form class="form-horizontal">
    <div class="control-group">
        <label class="control-label" for="arduino_path">{{ _('Path to arduino-cli') }}</label>
        <div class="controls">
            <div class="input-append">
                <input type="text" class="input-block-level" data-bind="value: settingsViewModel.settings.plugins.marlin_flasher.arduino_path" id="arduino_path">
            </div>
        </div>
        <label class="control-label" for="sketch_ino">{{ _('Sketch .ino') }}</label>
        <div class="controls">
            <div class="input-append">
                <input type="text" class="input-block-level" data-bind="value: settingsViewModel.settings.plugins.marlin_flasher.sketch_ino" id="sketch_ino">
            </div>
        </div>
        <label class="control-label" for="arduino_config">{{ _('Sketch .ino') }}</label>
        <div class="controls">
            <div class="input-prepend">
                <span class="btn fileinput-button">
                    <span>Upload</span>
                    <input id="arduino_config" type="file" name="arduino_config" data-url="{{ url_for("plugin.marlin_flasher.upload_config") }}" accept=".yaml">
                </span>
            </div>
        </div>
    </div>
</form>
